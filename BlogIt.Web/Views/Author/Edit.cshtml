@model BlogIt.Web.Models.AuthorDetailViewModel

@{
    ViewBag.Title = Model.Author.ID == Guid.Empty ? "Add Author" : "Edit Author";
}

<script>
    $(function () {
        author.registerSaveAuthorEvent();
    });
</script>

<div class="container-fluid">
    <h1 class="page-header">@ViewBag.Title</h1>

    <input type="hidden" id="id" name="ID" value="@Model.Author.ID" />

    <div class="row padding-8">
        <label class="col-md-2" for="Name">Name</label>
        <div class="col-md-10">
            <input type="text" class="text-box" id="name" name="Name" value="@Model.Author.Name" />
        </div>
    </div>

    <div class="row padding-8">
        <label class="col-md-2" for="Age">Age</label>
        <div class="col-md-10">
            <input type="number" class="text-box" id="age" name="Age" value="@Model.Author.Age" />
        </div>
    </div>

    <div class="row padding-8">
        <label class="col-md-2" for="City">City</label>
        <div class="col-md-10">
            <input type="text" class="text-box" id="city" name="City" value="@Model.Author.City" />
        </div>
    </div>

    <div class="row padding-8">
        <label class="col-md-2" for="State">State</label>
        <div class="col-md-10">
            <input type="text" class="text-box" id="state" name="State" value="@Model.Author.State" />
        </div>
    </div>

    <div class="row padding-8">
        <div class="col-md-offset-2 col-md-10">
            <input type="button" class="btn btn-default" id="save" value="Save" 
                   data-request-url="@Url.HttpRouteUrl("Authors", new { })" 
                   data-redirect-url="@Url.Action("Index", "Author")" />&nbsp;
            <a href="@Url.Action("Index", "Author")" class="btn btn-default">Cancel</a>
        </div>
    </div>
</div>