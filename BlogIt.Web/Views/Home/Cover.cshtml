@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <title>Blog It</title>

    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/cover")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/app")
</head>

<body>
    <div class="site-wrapper">
        <div class="site-wrapper-inner">
            <div class="cover-container">
                <div class="masthead clearfix">
                    <div class="inner">
                        <h3 class="masthead-brand">@Html.ActionLink("Blog It", "Index", "Home")</h3>
                        <ul class="nav masthead-nav">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Authors", "Index", "Author")</li>
                            <li>@Html.ActionLink("Blogs", "Index", "Blog")</li>
                        </ul>
                    </div>
                </div>

                <div class="inner cover">
                    <h1 class="cover-heading">Blog It</h1>
                    <p class="lead">This MVC-based application demonstrates a number of design patterns and advanced web development techniques using popular .NET and open source tools and frameworks.  All content is for illustrative purposes only.  Click below to access the app or view the source code.</p>
                    <p class="lead">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-lg btn-default">Get started</a>
                        <a href="https://github.com/jdwittenauer/blogit" class="btn btn-lg btn-default">Learn more</a>
                    </p>
                </div>

                <div class="mastfoot">
                    <div class="inner">
                        <p>&copy; @DateTime.Now.Year Blog It</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
