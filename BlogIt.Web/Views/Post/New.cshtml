@model BlogIt.Web.Models.PostDetailViewModel

@{
    ViewBag.Title = "Add Post";
}

<script>
    $(function () {
        post.registerSavePostEvent();
    });
</script>

<div class="container-fluid">
    <h1 class="page-header">@ViewBag.Title</h1>

    <input type="hidden" id="authorID" name="AuthorID" value="@Model.Post.AuthorID" />
    <input type="hidden" id="blogID" name="BlogID" value="@Model.Post.BlogID" />

    <div class="row padding-8">
        <label class="col-md-2" for="Title">Title</label>
        <div class="col-md-10">
            <input type="text" class="text-box" id="title" name="Title" value="@Model.Post.Title" />
        </div>
    </div>

    <div class="row padding-8">
        <label class="col-md-2" for="Content">Content</label>
        <div class="col-md-10">
            <textarea class="width-50" id="content" name="Content" rows="3">@Model.Post.Content</textarea>
        </div>
    </div>

    <div class="row padding-8">
        <div class="col-md-offset-2 col-md-10">
            <input type="button" class="btn btn-default" id="save" value="Save"
                   data-request-url="@Url.HttpRouteUrl("Posts", new { })"
                   data-redirect-url="@Url.Action("Detail", "Blog", new { id = Model.Post.BlogID })" />&nbsp;
            <a href="@Url.Action("Detail", "Blog", new { id = Model.Post.BlogID })" class="btn btn-default">Cancel</a>
        </div>
    </div>
</div>
