<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="The description of my page" />
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <title>My Blog - @ViewBag.Title</title>

    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/custom")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/global")
    @RenderSection("scripts", required: false)

    <script>
        $(function () {
            // Uncomment this to enable menu hover feature
            //RegisterHoverEnabledNavBar();
            RegisterActiveNavBar();
        });
    </script>
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top" role="navigation" style="font-size: 14px;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("My Blog", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>

            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Authors", "Index", "Author")</li>
                    <li>@Html.ActionLink("Blogs", "Index", "Blog")</li>
                    <li>@Html.ActionLink("Bootstrap", "Bootstrap", "Home")</li>
                </ul>
                <form class="navbar-form navbar-right" role="form">
                    <div class="form-group">
                        <input type="text" class="form-control" id="searchText">
                    </div>
                    <button type="submit" class="btn btn-success" id="searchButton">Search</button>
                </form>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        @RenderBody()
    </div>

    <br />

    <footer class="footer">
        <div class="container-fluid">
            <div class="col-md-5 text-center">
                <a>Link 1</a>&nbsp;&nbsp;&nbsp;
                <a>Link 2</a>&nbsp;&nbsp;&nbsp;
                <a>Link 3</a>&nbsp;&nbsp;&nbsp;
            </div>
            <div class="col-md-2 text-center">
                &copy; @DateTime.Now.Year My Blog
            </div>
            <div class="col-md-5 text-center">
                <a>Link 4</a>&nbsp;&nbsp;&nbsp;
                <a>Link 5</a>&nbsp;&nbsp;&nbsp;
                <a>Link 6</a>&nbsp;&nbsp;&nbsp;
            </div>
        </div>
    </footer>
</body>
</html>
