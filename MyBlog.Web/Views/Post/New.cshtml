@model MyBlog.Domain.Entities.Post

@{
    ViewBag.Title = "Add Post";
}

<div class="container-fluid">
    <h1 class="page-header">@ViewBag.Title</h1>

    <input type="hidden" id="authorID" name="AuthorID" value="@Model.AuthorID" />
    <input type="hidden" id="blogID" name="BlogID" value="@Model.BlogID" />

    <div class="row padding-8">
        <label class="col-md-2" for="Title">Title</label>
        <div class="col-md-10">
            <input type="text" class="text-box" id="title" name="Title" value="@Model.Title" />
        </div>
    </div>

    <div class="row padding-8">
        <label class="col-md-2" for="Content">Content</label>
        <div class="col-md-10">
            <textarea class="width-50" id="content" name="Content" rows="3">@Model.Content</textarea>
        </div>
    </div>

    <div class="row padding-8">
        <div class="col-md-offset-2 col-md-10">
            <input type="button" class="btn btn-default" id="save" value="Save" />&nbsp;
            <input type="button" class="btn btn-default" id="cancel" value="Cancel" />
        </div>
    </div>
</div>
