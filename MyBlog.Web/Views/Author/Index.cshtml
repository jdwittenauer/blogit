@model MyBlog.Web.Models.AuthorViewModel

@{
    ViewBag.Title = "Authors";
}

<div class="container-fluid">
    <h1 class="page-header">@ViewBag.Title</h1>

    <div class="padding-8">
        <a>Insert</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Age</th>
                <th>City</th>
                <th>State</th>
                <th>Posts</th>
                <th>Comments</th>
                <th>Actions</th>
            </tr>

            @{int i = 1;}
            @foreach (var author in Model.Authors)
            {
                <tr>
                    <td>@i</td>
                    <td>@author.Name</td>
                    <td>@author.Age</td>
                    <td>@author.City</td>
                    <td>@author.State</td>
                    <td><a>@author.PostCount</a></td>
                    <td><a>@author.CommentCount</a></td>
                    <td><a>Edit</a>&nbsp;&nbsp;<a>Delete</a></td>
                </tr>
                i++;
            }
        </table>
    </div>
</div>
