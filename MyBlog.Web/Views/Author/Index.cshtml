@model MyBlog.Web.Models.AuthorViewModel

@{
    ViewBag.Title = "Authors";
}

<div class="page-header">
    <h1>Authors</h1>
</div>

<a>Insert</a>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Age</th>
            <th>City</th>
            <th>State</th>
            <th>Posts</th>
            <th>Comments</th>
            <th>Actions</th>
        </tr>

        @{int i = 1;}
        @foreach (var author in Model.Authors)
        {
            <tr>
                <td>@i</td>
                <td>@author.Name</td>
                <td>@author.Age</td>
                <td>@author.City</td>
                <td>@author.State</td>
                <td><a>@author.PostCount</a></td>
                <td><a>@author.CommentCount</a></td>
                <td><a>Edit</a>&nbsp;&nbsp;<a>Delete</a></td>
            </tr>
            i++;
        }
    </table>
</div>
