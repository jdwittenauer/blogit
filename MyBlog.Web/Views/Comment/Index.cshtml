@model MyBlog.Web.Models.CommentViewModel

@{
    ViewBag.Title = "Comments";
}

<div class="container-fluid">
    <h1 class="page-header">@ViewBag.Title</h1>

    @if (Model.Comments.Count == 0)
    {
        <p class="lead">This author has not posted any comments yet.</p>
    }
    else
    {
        <div class="list-group">
            @foreach (var comment in Model.Comments)
            {
                <div class="list-group-item bg-very-light">
                    <p>@comment.BlogName - @comment.PostTitle</p>
                    <p>(@comment.Date.ToShortDateString()) @comment.AuthorName said:</p>
                    <blockquote>@comment.Content</blockquote>
                </div>
            }
        </div>
    }
</div>
