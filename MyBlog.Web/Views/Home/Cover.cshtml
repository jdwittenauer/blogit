@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <title>My Blog</title>

    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/cover")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/global")
</head>

<body>
    <div class="site-wrapper">
        <div class="site-wrapper-inner">
            <div class="cover-container">
                <div class="masthead clearfix">
                    <div class="inner">
                        <h3 class="masthead-brand">@Html.ActionLink("My Blog", "Index", "Home")</h3>
                        <ul class="nav masthead-nav">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Authors", "Index", "Author")</li>
                            <li>@Html.ActionLink("Blogs", "Index", "Blog")</li>
                            <li>@Html.ActionLink("Bootstrap", "Theme", "Home")</li>
                        </ul>
                    </div>
                </div>

                <div class="inner cover">
                    <h1 class="cover-heading">My Blog</h1>
                    <p class="lead">This app demonstrates a number of advanced web development practices using a variety of popular tools and frameworks.  All content is for illustrative purposes only.</p>
                    <p class="lead">
                        <a href="https://github.com/jdwittenauer/myblog" class="btn btn-lg btn-default">Learn more</a>
                    </p>
                </div>

                <div class="mastfoot">
                    <div class="inner">
                        <p>&copy; @DateTime.Now.Year My Blog</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
